@model Pagination.Models.Movie

<h1>Create New Movie</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImdbRating" class="control-label"></label>
        <input asp-for="ImdbRating" class="form-control" />
        <span asp-validation-for="ImdbRating" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Industry" class="control-label"></label>
        <input asp-for="Industry" class="form-control" />
        <span asp-validation-for="Industry" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>


